<div class="container">
  <h1>{{title}}</h1>
  <div class="folder-container" onclick="toggleImages('user-images')">
    <div class="folder-icon">
      üìÅ
    </div>
    <div class="folder-name">
      {{username}}'s Images
    </div>
  </div>
  <div class="row image-row user-images" style="display: none;">
    {{#each imageNames}}
      <div class="col-md-4">
        <img src="/public/img/{{../username}}/{{this}}" alt="{{this}}" class="img-thumbnail">
      </div>
    {{/each}}
  </div>
  <div class="folder-container" onclick="toggleImages('crew-images')">
    <div class="folder-icon">
      üìÅ
    </div>
    <div class="folder-name">
      Crew Images
    </div>
  </div>
  <div class="row image-row crew-images" style="display: none;">
    {{#each crewNames}}
      <div class="col-md-4">
          <img src="/public/img/{{../username}}/crew/{{this}}" alt="{{this}}" class="img-thumbnail">
        </div>
    {{/each}}
  </div>
</div>

<script>
  function toggleImages(imageRowClass) {
    const imageRow = document.querySelector(`.${imageRowClass}`);
    if (imageRow.style.display === 'none') {
      imageRow.style.display = 'flex';
    } else {
      imageRow.style.display = 'none';
    }
  }
</script>





