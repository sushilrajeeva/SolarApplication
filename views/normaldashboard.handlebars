<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <title>User Dashboard</title>
  <style>
    .content {
  display: none;
  margin-left: 200px;
  padding: 15px;
  z-index: 2;
  position: relative;
}

    .sidenav {
      height: 100%;
      width: 200px;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
      background-color: #111;
      overflow-x: hidden;
      padding-top: 20px;
    }

    .sidenav a {
      padding: 8px 8px 8px 16px;
      text-decoration: none;
      font-size: 18px;
      color: #818181;
      display: block;
    }

    .sidenav a:hover {
      color: #f1f1f1;
    }

    .content {
      display: none;
      margin-left: 200px;
      padding: 15px;
    }

    /* Add the custom CSS style here */
    .custom-checkbox input[type="checkbox"] {
      opacity: 1;
    }
  </style>

  <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
    <div class="container">
      <a class="navbar-brand" href="#">SOLARIS T6</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/normaldashboard">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/aboutus">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/service">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Image">Image Uploader</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/userchat">Chat</a>
          </li>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light" href="/bookdemo">Book Demo</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

</head>
<body>
  <div class="sidenav">
    <a href="/normaldashboard">Welcome {{username}}!</a>
    <a href="#" onclick="showContent('salesperson')">Normal User</a>
    <a href="#" onclick="showContent('estimated-price')">Estimated Installation Price</a>
        <a href="#" onclick="showContent('contract-agreement')">Contract Agreement</a>
    <a href="#" onclick="showContent('installation-progress')">Installation Progress</a>
  </div>

  <!-- Add your content divs here -->
  <div id="salesperson" class="content">
    <h2>Salesperson</h2>
    <p>Your assigned salesperson is John Doe.</p>
    <p>Email: john.doe@example.com</p>
    <p>Phone: (123) 456-7890</p>
  </div>

  <div id="estimated-price" class="content">
    {{#if installation}}
      <h2>You have already placed installation order</h2>
    {{else}}
      
      <h2>Estimated Installation Price</h2>
    <form id="priceForm" method="post" action="/solarSelection">
      <!-- Add the custom-checkbox class to each form-check div -->
      <div class="form-check custom-checkbox">
        <input class="form-check-input" type="checkbox" value="5000" id="solar-panel">
        <label class="form-check-label" for="solar-panel">
          Solar Panel Installation - $5,000
        </label>
      </div>
      <div class="form-check custom-checkbox">
        <input class="form-check-input" type="checkbox" value="2000" id="solar-water-pump">
        <label class="form-check-label" for="solar-water-pump">
          Solar Water Pump Installation - $2,000
        </label>
      </div>
      <div class="form-check custom-checkbox">
        <input class="form-check-input" type="checkbox" value="2000" id="solar-water-heater">
        <label class="form-check-label" for="solar-water-heater">
          Solar Water Heater Installation - $2,000
        </label>
      </div>
      <div class="form-check custom-checkbox">
        <input class="form-check-input" type="checkbox" value="3000" id="solar-battery-storage">
        <label class="form-check-label" for="solar-battery-storage">
          Solar Battery Storage - $3,000
        </label>
      </div>
      <div class="form-check custom-checkbox">
        <input class="form-check-input" type="checkbox" value="1000" id="solar-inverter">
        <label class="form-check-label" for="solar-inverter">
          Solar Inverter Installation - $1,000
        </label>
      </div>
      <div class="form-check custom-checkbox">
        <input class="form-check-input" type="checkbox" value="500" id="solar-panel-maintenance">
        <label class="form-check-label" for="solar-panel-maintenance">
          Solar Panel Maintenance - $500
        </label>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>



    </form>
    <p>Total cost: $<span id="total-cost">0</span></p>
    {{/if}}
    
  </div>

  <div id="contract-agreement" class="content">
    {{#if agreement}}
      <h2>You have already signed the agreement</h2>
    {{else}}
      <h2><a href="/agreement">Contract Agreement</a></h2>
    {{/if}}

  </div>

  <div id="installation-progress" class="content">
    <h2 > <a href="/installationprogress"> Installation Progress </a> </h2>
  </div>

  <script src="/public/js/normaldashboard.js"></script>
</body>


