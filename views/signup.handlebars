    <!-- Main Content -->
    <div style="display: flex; justify-content: center; align-items: center;">

          <form id="signup-form" method = 'post'>

			<label for="userTypeInput">Select User Type:</label> <br>
                <select id="userTypeInput" name="userTypeInput" required>
                    <option value="normal user" selected>Normal User</option>
                    <option value="sales">Sales</option>
                    <option value="management">Management</option>
                    <option value="crew">Crew</option>
                </select> <br>

            <label for="firstNameInput" >First Name</label> <br>
            <input type="text"  id="firstNameInput" name="firstNameInput" required placeholder="Enter your First Name"> <br>

            <label for="middleNameInput" >Middle Name</label> <br>
            <input type="text"  id="middleNameInput" name="middleNameInput" required placeholder="Enter your Middle Name"> <br>

            <label for="lastNameInput" >Last Name</label> <br>
            <input type="text"  id="lastNameInput" name="lastNameInput" required placeholder="Enter your Last Name"> <br>

            <label for="emailAddressInput" >Email address</label> <br>
            <input type="email" id="emailAddressInput" name="emailAddressInput" placeholder="Enter your Email Address" required> <br>

            <label for="phoneNumberInput" >Phone</label> <br>
            <input type="tel"  id="phoneNumberInput" name="phoneNumberInput" placeholder="Enter your Phone number" required> <br>

            <label for="addressInput" >Address</label> <br>
            <input type="text"  id="addressInput" name="addressInput" placeholder="Enter your Address"> <br>

            <label for="cityInput">City <span class="mandatory">*</span></label><br>
            <input type="text" id="cityInput" name="cityInput" placeholder="Please enter your City"><br>

            <label for="stateInput">State <span class="mandatory">*</span></label><br>
            <input type="text" id="stateInput" name="stateInput" placeholder="Please enter your State"><br>

            <label for="countryInput">Country <span class="mandatory">* </span>:</label>
            <input list="countryList" id="countryInput" name="countryInput" autocomplete="on" placeholder="{{defaultCountry.name}}" value="{{defaultCountry.name}}">
            <datalist id="countryList">
                {{#each countryList}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </datalist>
        <br>

        <label for="dobInput">Date of Birth <span class="mandatory">* </span>:</label>
        <input type="date" id="dobInput" name="dobInput" max="{{maxDate}}" >
        <br>

            <label for="passwordInput">Password</label> <br>
            <input type="password"  id="passwordInput" name="passwordInput" placeholder="Enter your Password" required> <br>

            <label for="retypePasswordInput" class="form-label">Retype Password</label> <br>
            <input type="password"  id="retypePasswordInput" name="retypePasswordInput" placeholder="Please confirm your Password" required> <br>

            <button type="submit" value="Submit">Submit</button> <br>

            <p>
                Already have an account? <a href="/login"> Click here to login</a>
            </p>


        </form>

        
        
